            android:textStyle="bold"
            android:textSize="24sp"
            android:text="@string/todo_list"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.Toolbar>

